//1 hour preparation time but the longer you can leave the sauce to simmer the better
//it gets all great and stewy
//should make enough for dinner and a serve for the freezer

garlic = 2 cloves;
cans of whole tomatos (roma) = 2;
tomato paste = 1 packet;
medium size onion = 1;
carrot = 1;
grams of ground beef = 500;
parmsan cheese = reggiano(the good shit);
spaghetti = 1 packet;
salt;
pepper;

function saucePrep(onion, garlic, salt){
    chop(garlic,onion);
    brown in pan
    (!burn(garlic));//<----------------IMPORTANT
        if(garic==burnt||oniion==burnt){
            restart();
        }else{
            add(can of tomato);
            add(tomato paste);
            grate(medium carrot);
            season to taste;
            delay(30);//minutes
        }
        return sauce;
}

function grate(carrot){
    peel(carrot);
    grate(carrot);
    return grated;
}

function pasta(pasta, salt, water){
    water=large pot; //you can't have too much water!
    boil(water); //its got to be really boiling yeah?
    add salt //enough salt that it should almost taste like sea water
    add(spagehetti);
    delay(8); //in minutes
    (!overcook);
    if(overcook==true){
        pasta.restart();
    }
    remove(pasta,stove); //pasta should still be a bit crunch in the middle
    drain;
    return pasta;
}

function party(friends, table, wine){
    call(friends);
    set(table);
    open(wine);
}

function serve(pasta, sauce){
  yum=combine(pasta,sauce);
  grate(cheese);
  add(cheese,yum)
  eat();
}

//MAKE DINNER!!!
dinner = saucePrep();
if(saucePrep.isFinished.()){
    party();
    pasta();
}

serve();
exit();
